{{#if hasLabel}}
	{{#if _isYieldInsideLabel}}
		{{#bs-form-label text=label}}{{yield}}{{/bs-form-label}}
	{{else}}
		{{bs-form-label text=label}}
	{{/if}}
{{/if}}
{{#if hasControl}}
	{{view _controlView valueBinding=controlValue nameBinding=controlName options=_controlOptions}}
{{/if}}
{{#if _hasYield}}
	{{yield}}
{{/if}}